<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomeComeDeliverance.Pages.ItemsPage"
             xmlns:vm="clr-namespace:KingdomeComeDeliverance.ViewModels"
             xmlns:controls="clr-namespace:KingdomeComeDeliverance.Controls"
             x:DataType="vm:ItemsPageViewModel"
             BindingContext="{Binding Source={StaticResource Locator}, Path=Items}"
             Title="ItemsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:NavigationBar />
        <Image Grid.Row="1" Source="{Binding Source={StaticResource KCD_2_BackgroundImagePath}}" Opacity="0.6" Margin="-200,0,0,0" Aspect="AspectFill" />
    </Grid>
</ContentPage>