<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KingdomeComeDeliverance.Pages.WeaponsPage"
             xmlns:vm="clr-namespace:KingdomeComeDeliverance.ViewModels"
             xmlns:controls="clr-namespace:KingdomeComeDeliverance.Controls"
             x:DataType="vm:WeaponsPageViewModel"
             BindingContext="{Binding Source={StaticResource Locator}, Path=Weapons}"
             Title="WeaponsPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <controls:NavigationBar />
        <Image Grid.Row="1" Source="{Binding Source={StaticResource WeaponsImage}}" Opacity="0.6" Aspect="AspectFill"  Margin="0,0,-500,0"/>
    </Grid>
</ContentPage>